@model IEnumerable<SIRESEP.UI.Models.Estado>

@{
    ViewBag.Title = "Index";
}

<h2>Estados</h2>

<p>
    @Html.ActionLink("Nuevo Estado", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idEstado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.usuarioCrea)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaCreacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.usuarioModifica)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaModifica)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idEstado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.usuarioCrea)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaCreacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.usuarioModifica)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaModifica)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.idEstado }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.idEstado }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.idEstado }, new { onclick = "return confirm('Desea eliminar este estado?');" })
        </td>
    </tr>
}

</table>
